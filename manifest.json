{
  "manifest_version": 3,
  "name": "Store DevTools",
  "author": "Julian Gomez",
  "version": "1.0",
  "description": "A Chrome DevTools extension for http://localhost:4200",
  "host_permissions": [
    "http://localhost:4200/*"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}