{
  "manifest_version": 3,
  "name": "Store DevTools",
  "author": "Julian Gomez",
  "version": "1.0",
  "description": "A Chrome DevTools extension for http://localhost:4200",
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*"],
  "permissions": ["webNavigation", "contextMenus", "tabs", "activeTab", "storage", "notifications"],
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*"],
      "js": ["content.js"]
    }
  ]
}
